<div class="content">
  <p class="form">
    投稿Form
  </p>
  <%= form_with(model: @blog, local: true) do |f| %>

    <div class="title"><%= f.label :title %><br />
    <%= f.text_field :title, autofocus: true, :placeholder => "タイトル" %></div>

    <div class="text-area"><%= f.label :text %><br />
    <%= f.text_area :text, autofocus: true, :placeholder => "本題" %></div>

    <div class="url"><%= f.label :video_url %><br />
    <%= f.text_field :video_url, autofocus: true, :placeholder => "YoutubeのURL(埋め込みiframe内のURLだけでいいです)" %></div>

    <div class="url"><%= f.label :image %><br />
    <%= f.text_field :image, autofocus: true, :placeholder => "ジャケット画像のURL" %></div>

    <div class="submit">
    <%= f.submit "投稿" %>
  <% end %>
</div>
