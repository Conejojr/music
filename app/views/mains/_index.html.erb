<div class="comments">
<% @comments.each do |comment|%>
  <div class="comment-info">
    <p class="comment-name"><%= comment.nickname %></p>
    <p class="comment-time"><%= comment.created_at.strftime("%Y-%m-%d") %></p>
  </div>
  <div class="comment-text"><%= simple_format(comment.comment) %>
  </div>
<% end %>
</div>